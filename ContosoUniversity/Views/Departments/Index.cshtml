@model IEnumerable<ContosoUniversity.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<h2>Departments</h2>

<p>
    <a asp-action="Create" class="button">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Administrator)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Budget)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Administrator.FullName)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DepartmentID"><img src="~/images/eye-solid.svg" alt="Edit" style="width:20px;height:15px;margin-right:15px;" /></a>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentID"><img src="~/images/edit-regular.svg" alt="Details" style="width:20px;height:15px;margin-right:10px;" /></a>
                    <a asp-action="Delete" asp-route-id="@item.DepartmentID"><img src="~/images/trash-solid.svg" alt="Delete" style="width:20px;height:15px;" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>